{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "typeRoots": ["node_modules/@types", "types"]
    // "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"]
}
