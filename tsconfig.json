{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "typeRoots": ["node_modules/@types", "types"],
    "baseUrl": ".",
    "paths": {
      "types/*": ["types/*"],
      "utils/*": ["utils/*"],
      "modules/*": ["modules/*"],
      "api/*": ["modules/api/*"],
      "config/*": ["modules/config/*"],
      "commands/*": ["modules/commands/*"],
      "git/*": ["modules/git/*"],
      "questions/*": ["modules/questions/*"]
    }
  },
  "include": ["src/**/*"]
}
